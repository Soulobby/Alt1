{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"ignore": ["functions/types.d.ts"]
	},
	"formatter": {
		"lineWidth": 100
	},
	"javascript": {
		"formatter": {
			"enabled": true
		}
	},
	"linter": {
		"rules": {
			"all": true,
			"correctness": {
				"noNodejsModules": "off",
				"noUndeclaredVariables": "off",
				"useImportExtensions": "off"
			},
			"style": {
				"noDefaultExport": "off",
				"noNonNullAssertion": "off",
				"useFilenamingConvention": "off",
				"useNamingConvention": "off",
				"useSingleCaseStatement": "error"
			},
			"suspicious": {
				"noConsole": "off",
				"noReactSpecificProps": "off"
			}
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"vcs": {
		"clientKind": "git",
		"defaultBranch": "main",
		"enabled": true,
		"useIgnoreFile": true
	}
}
